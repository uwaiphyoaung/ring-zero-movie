{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "allowJs": true,
    "noEmit": true,
    "types": ["node","jest"],
    "typeRoots": ["./node_modules/@types", "./@types"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@env": ["./types/env.d.ts"]
    },
  },
  "include": ["src/**/*", "tests/**/*", "__tests__/**/*", "src/types/global.d.ts", "src/types/react-native-reanimated.d.ts"],
  "extends": "@react-native/typescript-config/tsconfig.json"
}